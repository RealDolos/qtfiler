<div id="file-dropzone" class="wrapped column">
  <div id="room" class="grow column">

    <div class="control-bar no-grow">
      <div v-if="false" id="dim-screen"><div id="loading-message">Loading</div></div>

      <div v-cloak class="form-group">
        <div id="upload-button" class="button">Upload</div>
      </div>

      <template v-cloak v-if="mod">
        <div class="form-group">
          <div v-on:click="deleteFiles" id="delete-button" class="button">Delete</div>
        </div>
      </template>

      <div v-cloak class="form-group">
        <input v-model="filter" placeholder="Filter">
      </div>

      <template v-cloak v-if="mod">
        <span is="presence" :role="role" />
      </template>
    </div>

    <div v-cloak id="file-list-container" class="grow scroll-container">
      <span is="file-list" :role="role" :filter="filter" />
    </div>
  </div>
</div>

<template id="file-list-template">
  <div id="file-list" class="scroll-content column">
    <template v-for="(upload, index) in uploads">
      <span is="upload" :id="upload.id" :key="upload.id" :role="role" :index="index" />
    </template>
    <template v-if="filter == ''">
      <template v-for="(file, index) in files">
        <span is="file" :uuid="file.uuid" :key="file.uuid" :index="index" :role="role" />
      </template>
    </template>
    <template v-else>
      <template v-for="(file, index) in filteredFiles">
        <span is="file" :uuid="file.uuid" :key="file.uuid" :index="index" :role="role" />
      </template>
    </template>
  </div>
</template>

<template id="upload-template">
  <div :id="domId" class="file-container no-grow">
    {{ name }} - {{ progress }}%
  </div>
</template>

<template id="file-template">
  <div :id="domId" :class="['no-grow', 'file-container', { 'file-odd': isOdd, 'file-even': isEven }]">
    <div class="file-component file-component-left">
      <a target="_blank" :href="link" class="file-link" :data-hash-sha1="hash">{{ filename }}</a>
      <div class="file-sub-component">
        <span class="file-uploader">{{ uploader }}</span>
        <template v-if="mod"><span class="file-uploader">{{ ip_address }}</span></template>
      </div>
    </div>
    <div class="file-component file-component-right">
      <span class="file-expiration">{{ formattedExpirationDate }}</span>
      <template v-if="mod">
        <div class="file-sub-component">
          <input class="mark" type="checkbox" v-model="markedForDeletion">
          <div v-on:click="deleteMe" class="small delete button">ðŸ—‘</div>
        </div>
      </template>
    </div>
  </div>
</template>

<template id="presence-template">
  <div class="form-group">
    Presences
    <div>
      <template v-for="(user, id) in presences">
        <div>
          {{ user.user.name }}/{{ user.user.role }}:
          <div>
            <template v-for="meta in user.metas">
              <div>
                <span class="file-uploader">{{ meta.ip_address }}</span>
                <span class="file-uploader">{{ meta.online_at }}</span>
              </div>
            </template>
          </div>
        </div>
      </template>
    </div>
  </div>
</template>

<script>
  window.config = {"room_id":"<%= @room_id %>"};
</script>

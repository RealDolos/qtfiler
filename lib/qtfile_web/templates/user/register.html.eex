<%= form_for @conn, user_path(@conn, :register), [method: :post, as: :user], fn(f) -> %>
<div class="register-form">
    <h1 class="register-title">register now</h1>
    <div class="register-field">
        <%= text_input f, :name, id: "user_name", placeholder: "Name", class: "form-input" %> <span>this is your display name</span>
    </div>
    <br>

    <div class="register-field">
        <%= text_input f, :username, id: "user_username", placeholder: "Username", class: "form-input" %> <span>this is what you use to login. other people do not see this</span>
    </div>
    <br>

    <div class="register-field">
        <%= password_input f, :password, id: "user_password", placeholder: "Password", class: "form-input" %> <span>use a secure password or get bent</span>
    </div>
    <br>

    <div class="register-field">
        <%= password_input f, :token, id: "user_token", placeholder: "Token", class: "form-input" %> <span>get a registration token from the site administrator</span>
    </div>
    <br>
</div>

<div class="register">
    <%= submit "Register", class: "form-input" %>
</div>
<% end %>

